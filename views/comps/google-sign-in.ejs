<!-- 
    This is the google sign in button that will send a POST request to 
    the data-login_uri. I set the constant GOOGLE_LOGIN_ENDPOINT to http://localhost:3000/ 
    through .env when running locally.
-->

<script src="https://accounts.google.com/gsi/client" async defer></script>
<div id="g_id_onload"
    data-client_id="<%= GOOGLE_CLIENT_ID %>"
    data-login_uri="<%= GOOGLE_LOGIN_ENDPOINT %>"
    data-auto_prompt="false">
</div>
<div class="g_id_signin"
    data-type="standard"
    data-size="large"
    data-theme="outline"
    data-text="sign_in_with"
    data-shape="rectangular"
    data-logo_alignment="left">
</div>